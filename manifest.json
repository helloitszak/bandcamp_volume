{
	"name":"Bandcamp Volume",
	"manifest_version":2,
	"version":"1.1",
	
	"description":"Adds a volume slider to Bandcamp album pages on bandcamp.com",
	"permissions":[
		"storage"
	],
  	"icons": {
    	"32":  "images/logo_32.png",
    	"64":  "images/logo_64.png",
    	"128": "images/logo_128.png"
  	},
	"content_scripts":[
		{
			"matches":["*://*.bandcamp.com/*"],
			"js":["scripts/volume.js"]
		}
	]
}